<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tx_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingHorizontal="30sp"
        android:text="0"
        android:textSize="80sp" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="5"
        android:padding="10sp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/bt_clear"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="AC"
            android:textSize="40sp"
            android:textColor="#ff0000"
            />

        <Button
            android:id="@+id/bt_fuhao"
            android:text="+/-"
            android:textSize="40sp"
            />
        <Button
            android:id="@+id/bt_div"
            android:text="/"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num7"
            android:text="7"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num8"
            android:text="8"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num9"
            android:text="9"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_mul"
            android:text="*"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num4"
            android:text="4"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num5"
            android:text="5"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num6"
            android:text="6"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_sub"
            android:text="-"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num1"
            android:text="1"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num2"
            android:text="2"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num3"
            android:text="3"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_add"
            android:text="+"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_num0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="0"
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_dot"
            android:text="."
            android:textSize="40sp"

            />

        <Button
            android:id="@+id/bt_equ"
            android:text="="
            android:textSize="40sp"
            android:textColor="#0000ff"
            />


    </GridLayout>

</LinearLayout>