<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tx_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:maxLines="1"
        android:paddingHorizontal="30sp"
        android:text="0"
        android:textSize="60sp" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="8"
        android:orientation="horizontal"
        android:padding="0sp"
        android:rowCount="5"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/bt_mc"
            android:text="mc"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_madd"
            android:text="m+"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_msub"
            android:text="m-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_mr"
            android:text="mr"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_clear"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="AC"
            android:textColor="#ff0000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_fuhao"
            android:text="+/-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_div"
            android:text="÷"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_x2"
            android:text="x^2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_x3"
            android:text="x^3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_xy"
            android:text="x^y"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_ex"
            android:text="e^x"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_num7"
            android:text="7"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_num8"
            android:text="8"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_num9"
            android:text="9"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_mul"
            android:text="×"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/x-2"
            android:text="x^-2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/x-3"
            android:text="x^-3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_x-y"
            android:text="x^-y"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_ln"
            android:text="ln"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_num4"
            android:text="4"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_num5"
            android:text="5"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_num6"
            android:text="6"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_sub"
            android:text="-"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_sin"
            android:text="sin"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_cos"
            android:text="cos"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_tan"
            android:text="tan"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_e"
            android:text="e"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_num1"
            android:text="1"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_num2"
            android:text="2"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_num3"
            android:text="3"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_add"
            android:text="+"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_1x"
            android:text="1/x"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_xx"
            android:text="x!"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_test"
            android:text="null"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pi"
            android:text="π"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_num0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="0"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_dot"
            android:text="."
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/bt_equ"
            android:text="="
            android:textColor="#0000ff"
            android:textSize="20sp" />


    </GridLayout>

</LinearLayout>